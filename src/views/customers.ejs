<%- include("partials/header") %>
<%- include("partials/nav") %>
<h1 class="mt-4">Agregar medicamento</h1>


<form action="/add" method="post">

  <div class="form-group card border-primary mb-3 container mt-2" style="width: 80%">
    <div class="form-group">
      <input type="text" name="nombre_producto" placeholder="Nombre producto" class="form-control mt-2" id="nameP" />
    </div>
    <div class="form-group">
      <input type="text" name="principio_activo" placeholder="Ingrediente activo" class="form-control mt-2" />
    </div>
    <div class="form-group">
      <input type="text" name="presentacion" placeholder="Presentacion" class="form-control mt-2" />
    </div>
    <div class="form-group">
      <input type="text" name="concentracion" placeholder="Concentracion" class="form-control mt-2" />
    </div>
    <div class="form-group">
      <input type="text" name="categoria" placeholder="Categoria" class="form-control mt-2" />
    </div>
    <div class="form-group">
      <input type="date" name="fecha_vencimiento" placeholder="Fecha vencimiento" class="form-control mt-2" />
    </div>
    <div class="container-fluid">
      <div class="d-flex justify-content-start gap-2 mt-2 mb-2">
        <button type="submit" class="btn btn-outline-primary" id="getName">Guardar</button>
      </div>
    </div>
  </div>
</form>
<h1 class="mt-4">Lista de medicamentos</h1>
<div class="form-group card border-primary container mt-2 p-0" style="width: 90%">
  <table class="table table-hover">
    <thead>
      <tr class="table-info">
        <th>ID</th>
        <th>Nombre</th>
        <th>Ingrediente activo</th>
        <th>Presentacion</th>
        <th>Concentracion</th>
        <th>Categoria</th>
        <th>Fecha vencimiento</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if(data){ %> <% for (let i = 0; i < data.length; i++) { %>

      <tr>
        <td><%= data[i].id_producto %></td>
        <td><%= data[i].nombre_producto %></td>
        <td><%= data[i].principio_activo %></td>
        <td><%= data[i].presentacion %></td>
        <td><%= data[i].concentracion %></td>
        <td><%= data[i].categoria %></td>
        <td><%= data[i].fecha_vencimiento %></td>
        <td>
          <a href="/delete/<%= data[i].id_producto %>" class="btn btn-outline-warning" style="width: 100%  ">Borrar</a>
          <a href="/update/<%= data[i].id_producto %>" class="btn btn-outline-danger" style="width: 100%">Actualizar</a>

        </td>
      </tr>

      <% } %>
      <% } %>
      <%- include("chatbot") %>
    </tbody>
  </table>
</div>
</body>

</html>