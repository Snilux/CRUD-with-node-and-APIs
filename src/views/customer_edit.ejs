
<%- include("partials/header") %>
    <form action="/update/<%= data.id_producto %>" method="post">
      <%- include("partials/nav") %>
      <div
        class="form-group card border-primary mb-3 container mt-5"
        style="width: 40%"
      >
        <div class="form-group">
          <input
            type="text"
            name="nombre_producto"
            value="<%= data.nombre_producto %>"
            class="form-control mt-2"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="principio_activo"
            value="<%= data.principio_activo %>"
            class="form-control mt-2"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="presentacion"
            value="<%= data.presentacion %>"
            class="form-control mt-2"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="concentracion"
            value="<%= data.concentracion %>"
            class="form-control mt-2"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="categoria"
            value="<%= data.categoria %>"
            class="form-control mt-2"
          />
        </div>
        <div class="form-group">
          <input
            type="date"
            name="fecha_vencimiento"
            value="<%= data.fecha_vencimiento %>"
            class="form-control mt-2"
          />
        </div>
        <div class="mt-2 mb-2">
          <button type="submit" class="btn btn-outline-secondary">Actualizar</button>
        </div>
      </div>
    </form>
  </body>
</html>
